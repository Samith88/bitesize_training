project: nstest
environments:
  - name: dev
    namespace: nstest-dev
    services:
      - name: sample_sever
        external_url: nstest-dev-sample-sever-dev.bite.pearsondev.tech
        port: 8000
        replicas: 1
        application: sample_sever
        version: 1.0
        limits:
          memory: 128Mi
          cpu: 100m
        deployment:
          method: rolling-upgrade
        readiness_probe:
          handler:
            http_get:
              path: /
              port: 8000
          initial_delay_seconds: 20
          period_seconds: 40
          timeout_seconds: 60
        liveness_probe:
          handler:
            http_get:
              path: /
              port: 8000
          initial_delay_seconds: 20
          period_seconds: 60
          timeout_seconds: 10